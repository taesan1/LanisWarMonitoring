{
  "manifest_version": 3,
  "name": "라니스 전쟁 헬퍼 (코스모스)",
  "version": "1.3",
  "description": "전쟁 현황 추적 및 길드 정보 수집",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://lanis.me/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://lanis.me/*"],
      "js": ["guildCollector.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}